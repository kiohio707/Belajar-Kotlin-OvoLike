<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_recomendation"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/iv_recomendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/img_recommendation"
            android:adjustViewBounds="true"
            />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_title_recomendation"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        tools:text="Rekomendasi"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_recomendation"
        />

    <TextView
        android:id="@+id/tv_subtitle_recomendation"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        tools:text="Sub-Rekomendasi"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_recomendation"
        />

</androidx.constraintlayout.widget.ConstraintLayout>